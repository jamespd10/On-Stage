<h1 class="mx-5">Configuración del perfil</h1>
<div class="container">
    <div class="row mt-4">
        {{!--COLUMNA DE CONFIGUTACION DEL PERFIL--}}
        <div class="col-md">
            <div class="card card-form-config">
                <div class="card-header">
                    <h2>Datos del perfil</h2>
                </div>
                <div class="card-body">
                    <form action="/profile/edit/{{user.id}}?_method=PUT" method="POST" enctype="multipart/form-data">
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="inputConfigName">Nombre</label>
                                <input type="text" class="form-control" id="inputConfigName" value="{{user.name}}"
                                    name="name">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="inputConfigApellido">Apellido</label>
                                <input type="text" class="form-control" id="inputConfigApellido"
                                    value="{{user.apellido}}" name="apellido">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="inputConfigCorreo">Correo</label>
                                <input type="email" class="form-control" id="inputConfigCorreo" name="correo"
                                    value="{{user.correo}}">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="inputConfigPassword">Password</label>
                                <input type="password" class="form-control" id="inputConfigPassword" name="password">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="customFileLangHTML">Imagen</label>
                            <div class="custom-file">
                                <input type="file" class="custom-file-input" id="customFileLangHTML" name="file">
                                <label class="custom-file-label" for="customFileLangHTML"
                                    data-browse="Elegir">Seleccionar imagen</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputConfigUbicacion">Ubicación</label>
                            <input type="text" class="form-control" id="inputConfigUbicacion" name="ubicacion"
                                value="{{user.ubicacion}}">
                        </div>
                        <div class="form-group">
                            <label for="inputConfigWeb">Web</label>
                            <input type="text" class="form-control" id="inputConfigWeb" name="web" value="{{user.web}}">
                        </div>
                        <div class="form-group">
                            <label for="inputConfigDescripcion">Descripción</label>
                            <textarea class="form-control" id="inputConfigDescripcion" rows="3"
                                name="descripcion">{{user.descripcion}}</textarea>
                        </div>
                        <button type="submit" class="btn btn-secondary">Enviar <i
                                class="fas fa-paper-plane"></i></button>
                    </form>
                </div>
            </div>
        </div>
