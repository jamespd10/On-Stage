    <hr class="hr-form-stream-config">
    {{!--ROW DE CONFIGURACION DEL STREAM--}}
    <div class="row mt-4">
        <div class="col">
            <div class="card card-form-config">
                <div class="card-header">
                    <h2>Configuración de Streams</h2>
                </div>
                <div class="card-body">
                    {{#if user.artista}}
                        {{#if tags}}
                            <p class="h3">Ya eres Streamer, puedes agregar más tags!</p>
                        {{else}}
                            <p class="h3">Ya tienes el máximo de tags agregados!</p>
                        {{/if}}
                    {{else}}
                        <p class="h3">Convierte te en Streamer!</p>
                        <div class="alert alert-dark" role="alert">
                                Debes agregar un tag. Puedes agregar otros mas tarde, pero debes aceptar los
                                <a href="/profile/terminos/condiciones" class="alert-link">términos y condiciones</a>.
                            </div>
                    {{/if}}
                    {{#if user.artista}}
                    <hr class="hr-form-stream-config">
                        <div class="form-group">
                                <p class="h4">Tus tags: </p>
                                {{#each usuario}}
                                    {{#each tags}}
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input is-valid" type="checkbox" 
                                            id="check{{this}}" value="{{this}}" name="check" checked disabled>
                                        <label class="form-check-label" for="check{{this}}">{{this}}</label>
                                    </div>
                                    {{/each}}
                                {{/each}}
                        </div>
                    {{/if}}
                    {{#if tags}}
                    <hr class="hr-form-stream-config">
                    <form action="/profile/streamer/accepted/{{user.id}}" method="POST" id="formSendTagsTerminos">
                        <div class="form-group">
                            <p class="h4">Tags: </p>
                            {{#each tags}}
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" id="check{{name}}" value="{{name}}" name="check">
                                <label class="form-check-label" for="check{{name}}">{{name}}</label>
                            </div>
                            {{/each}}
                        </div>
                        <hr class="hr-form-stream-config">
                        <div class="form-group">
                            {{#if user.artista}}
                                <label class="form-check-label" for="checkBoxTerminos">
                                    <a href="/profile/terminos/condiciones">Ver términos y condiciones</a>
                                </label>
                            {{else}}
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="checkbox" id="checkBoxTerminos" 
                                            value="1" name="checkBoxTerminos"
                                        required>
                                    <label class="form-check-label" for="checkBoxTerminos">
                                        He leído y acepto los <a href="/profile/terminos/condiciones">términos y
                                            condiciones</a> de uso
                                    </label>
                                </div>
                            {{/if}}
                        </div>
                        {{#if user.artista}}
                            <button type="submit" class="btn btn-secondary">Enviar <i
                                class="fas fa-paper-plane"></i></button>
                        {{else}}
                            <button type="submit" class="btn btn-secondary">Enviar 
                                <i class="fas fa-paper-plane"></i></button>
                        {{/if}}
                    </form>
                    {{else}}
                        <label class="form-check-label" for="checkBoxTerminos">
                            <a href="/profile/terminos/condiciones">Ver términos y condiciones</a>
                        </label>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>