<div class="container mt-4 mb-4">
    <div class="row justify-content-center">
        <div class="col-lg-4">
            <div class="card form-card">
                <h3 class="card-title text-center mt-2">Formulario de Ingreso</h3>
                <div class="card-body">
                    <form action="/signin" method="post" id="formSignin">
                        <div class="form-group">
                            <label for="inputUsername">Username</label>
                            <div class="input-group mb-2 mr-sm-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text input-group-icon"><i class="fas fa-user"></i></div>
                                </div>
                                <input type="text" id="inputUsername" name="username"
                                    class="form-control form-input-card" autofocus required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword5">Password</label>
                            <div class="input-group mb-2 mr-sm-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text input-group-icon"><i class="fas fa-lock"></i></div>
                                </div>
                                <input type="password" id="inputPassword5" name="password"
                                    class="form-control form-input-card" aria-describedby="passwordHelpBlock" required>
                            </div>
                        </div>
                        <button class="btn btn-secondary btn-block btn-form-card" type="submit"><i
                                class="fas fa-paper-plane"></i>
                            Ingresar</button>
                        <div class="form-group mt-5 text-center">
                            <div class="form-group">
                                <a href="/signup">registrarte aqu√≠</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>