{{#if user}}
<div class="container my-4">
    <div class="row justify-content-center">
        <div class="input-group mb-4">
            <div class="col-sm mb-4">
                <input type="text" class="form-control" id="input-card-tags" placeholder="Buscar tags...">
            </div>
        </div>
    </div>
    <div class="row justify-content-center" id="row-card-tags">
        {{#each tags}}
            <div class="col-md-4 mb-4" id="col-card-tags">
                <div class="card tags-card">
                    <a href="/tags/{{name}}">
                        <img src="{{imagen}}" width="200" height="200" class="card-img-top img-thumbnail" alt="">
                    </a>
                    {{#if user.artista}}
                        <div class="icon-card-top">
                            <a href="#">
                                <i class="fas fa-plus" data-toggle="tooltip" title="Agregar tag"></i>
                            </a>
                        </div>
                    {{/if}}
                    <div class="card-body">
                        <h5 class="card-title">
                            <a class="text-decoration-none text-light" href="/tags/{{name}}">{{name}}</a>
                        </h5>
                        <p class="card-text text-muted font-italic">99, 999 usuarios taggearon</p>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>
